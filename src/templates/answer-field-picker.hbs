<div class="afp-main span3">
  <legend class="afp-model-caption">{{model.caption}}</legend>
  <div class="afp-scrollable">
    <ul class="afp-entity-list nav nav-list">
      {{#each model.entities}}
        {{#unless this.hidden}}
          <li class="afp-entity nav-header">{{this.caption}}</li>
            {{#each this.attributes}}
              {{#unless this.hidden}}
                <li class="afp-attribute" modelPath="{{this.modelPath}}">{{this.caption}}</li>
              {{/unless}}
            {{/each}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
