.afp-main {
  max-height: 500px;
  min-height: 20px;
  padding: 0px 0px 0px 0px;
  margin: 0 0 0 20px;
  border: 1px solid #e3e3e3;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05)
}

.afp-scrollable {
  overflow-y: scroll;
  height: 400px;
}

.afp-model-caption {
  margin-bottom: 5px;
  padding-left: 10px;
  background-color: #f5f5f5;
}

.afp-attribute-info {
  opacity: 0.1;
}

.afp-attribute-info:hover {
  opacity: 0.7;
}

.afp-attribute-info-none {
  opacity: 0;
}

.afp-attribute {
  cursor: pointer;
}

.afp-attribute-caption {
  color: #0088cc;
}