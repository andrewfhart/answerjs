.afl-main {
  max-height: 500px;
  min-height: 20px;
  padding: 0px 0px 0px 0px;
  margin: 0 0 0 20px;
  border: 1px solid #e3e3e3;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05)
}

.afl-scrollable {
  overflow-y: scroll;
  height: 400px;
}

.afl-caption {
  margin-bottom: 5px;
  padding-left: 10px;
  background-color: #f5f5f5;
}

.afl-field-list {
  width: 100%;
}

.afl-field-list-header-entity {
  width: 30%;
}

.afl-field-list-header-attribute {
  width: 30%;
}

.afl-field-list-header-delete {
  width: 30px;
}

